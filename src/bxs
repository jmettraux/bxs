#! /usr/bin/env sh

#
# src/bxs
#
# vim: set ft=sh:
#

RUBY=`find ~/.rubies -name "ruby" | grep ruby-3 | grep bin/ruby | head -1`
  #
if [ -z "$RUBY" ]; then
  RUBY=`find /usr/local/bin/ -name "ruby3*" | grep ruby | head -1`
fi
  #
if [ -z "$RUBY" ]; then
  >&2 echo "found no Ruby 3.x under ~/.rubies..."
  exit 1
fi


SELF=`readlink $0`

#$RUBY $SELF.rb $*
$RUBY $SELF.rb "$@"

